<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:backButton="false"
        app:lineColor="@color/global_line_color"
        app:title="@string/app_name"
        app:titleSize="@dimen/title_size" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout_home_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar_home">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <com.wanblog.ui.view.StatusView
        android:id="@+id/status_view_home_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar_home"
        android:visibility="gone" />

</RelativeLayout>
