<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_bg_color"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:backButton="false"
        app:lineColor="@color/global_line_color"
        app:title="@string/main_tab_category"
        app:titleSize="@dimen/title_size" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/main_tab_category"
        android:textColor="@color/me_text_color"
        android:textSize="32sp" />

</LinearLayout>
